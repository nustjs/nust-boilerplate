{
  "name": "nust-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate for demonstrating how to build a static site with Nust.js",
  "main": "index.js",
  "scripts": {
    "update": "git submodule update --init && git submodule foreach git pull origin master && git submodule foreach npm i",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "node index.js",
    "debug": "node --inspect --debug-brk index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nustjs/nust-boilerplate.git"
  },
  "keywords": [
    "nust",
    "nustjs",
    "nust.js",
    "nuxt",
    "nuxtjs",
    "nuxt.js"
  ],
  "author": "mamboer",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nustjs/nust-boilerplate/issues"
  },
  "homepage": "https://github.com/nustjs/nust-boilerplate#readme",
  "dependencies": {
    "nust": "latest"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "babel-preset-vue-app": "^1.2.0",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-html": "^2.0.3",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-node": "^5.0.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1"
  }
}
